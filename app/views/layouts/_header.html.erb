<header>
  <ul class="nav">
    <li class="nav-item">
      <a class="nav-link" href="/">
        <%= image_tag "/logo.png", class: 'img-fluid logo' %>
      </a>
    </li>
    <% if can? :manage, User %>
      <li class="nav-item pages">
        <%= link_to 'Users', admin_users_path, class: 'nav-link' %>
      </li>
    <% end %>
    <% if can? :read, Shift %>
      <li class="nav-item pages">
        <%= link_to 'Shifts', shifts_path, class: 'nav-link' %>
      </li>
    <% end %>
    <li class="nav-item pages">
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "nav-link" %>
      <% else %>
        <%= link_to 'Sign in', new_user_session_path, class: "nav-link" %>
      <% end %>
    </li>
  </ul>
</header>

