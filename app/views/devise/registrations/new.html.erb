<% content_for :title, "Sign Up" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'sign-in form-signin' }) do |f| %>
  <%= image_tag "/logo.png", class: 'mb-4 logo' %>
  <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <% placeholder = @minimum_password_length ? "Enter password (#{@minimum_password_length} characters minimum)": 'Enter password' %>
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email', autocomplete: "email" %>
  <%= f.password_field :password, class: 'form-control sign-up', placeholder: placeholder, autocomplete: "current-password" %>
  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation', autocomplete: "current-password" %>

  <%= button_tag 'Sign up', class: 'btn btn-lg btn-primary btn-block login-submit-btn', type: :submit %>

  <div class="mt-5 mb-3 text-muted">
    <%= render "devise/shared/links" %>
  </div>
<% end %>


