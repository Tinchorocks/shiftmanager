<div class="row">
  <div class="col-xs-12 col-lg-8">
    <%= form_for(shift, html: { class: 'shifts' }) do |f| %>
      <%= render "layouts/alerts" %>

      <% if shift.errors.any? %>
        <div class="alert alert-warning" role="alert">
          <%= shift.errors.full_messages.to_sentence.capitalize %>.
        </div>
      <% end %>

      <div class="row">
        <div class="col-xs-12 col-lg-6">
          <label class="form-label">User</label>
          <%= f.select :user_id, 
              options_for_select(@users.map { |user| ["#{user.name} (#{user.email})", user.id]}, shift&.user&.id), 
              { :include_blank => 'Select a user' },
              class: "form-select" %>
        </div>

        <div class="col-xs-12 col-lg-6">
          <div class="form-check">
            <%= f.check_box :acknowledged, { class: "form-check-input" } %>
            <label class="form-check-label form-label" for="flexCheckDefault">
              Acknowledged
            </label>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-lg-6">
          <label class="form-label">Start Time</label>
          <%= f.text_field :start_time, class: 'form-control bg-white datepicker', placeholder: 'Starts At', data: { 'date-format': 'Y-m-d H:i', 'enable-time': 'true' } %>
        </div>
        <div class="col-xs-12 col-lg-6">
          <label class="form-label">End Time</label>
          <%= f.text_field :end_time, class: 'form-control bg-white datepicker', placeholder: 'Ends At', data: { 'date-format': 'Y-m-d H:i', 'enable-time': 'true' } %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-lg-12">
          <label class="form-label">Notes</label>
          <%= f.text_area :notes, class: 'form-control', placeholder: 'Observations', rows: 5 %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 text-center">
          <%= f.submit class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>