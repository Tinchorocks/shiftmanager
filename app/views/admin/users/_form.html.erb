<div class="row">
  <div class="col-xs-12 col-lg-8">
    <%= form_for(user, url: url, html: { class: 'shifts' }) do |f| %>
      <%= render "layouts/alerts" %>

      <% if user.errors.any? %>
        <div class="alert alert-warning" role="alert">
          <%= user.errors.full_messages.to_sentence.capitalize %>.
        </div>
      <% end %>

      <div class="row">
        <div class="col-xs-12 col-lg-6">
          <label class="form-label">Role</label>
          <%= select_tag :role, options_for_select(@roles.map { |role| [role.name.capitalize, role.name] }, (user.roles[0]&.name || :employee)), class: "form-select" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-lg-6">
          <label class="form-label">Name</label>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name' %>
        </div>

        <div class="col-xs-12 col-lg-6">
          <label class="form-label">Employee ID</label>
          <%= f.text_field :employee_id, class: 'form-control', placeholder: 'Enter Employee ID' %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-lg-4">
          <label class="form-label">Email</label>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>

        <div class="col-xs-12 col-lg-4">
          <label class="form-label">Password</label>
          <% placeholder = @minimum_password_length ? "Enter password (#{@minimum_password_length} characters minimum)": 'Enter password' %>
          <%= f.password_field :password, class: 'form-control', placeholder: placeholder %>
        </div>
        <div class="col-xs-12 col-lg-4">
          <label class="form-label">Password Confirmation</label>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 text-center">
          <%= f.submit class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>